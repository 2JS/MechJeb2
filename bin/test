#!/usr/bin/env bash

set -exuo pipefail

nuget restore MechJeb2.sln
msbuild /p:Configuration=Release /p:ReferencePath="/Users/lamont/Library/Application Support/Steam/steamapps/common/Kerbal Space Program/KSP.app/Contents/Resources/Data/Managed" MechJeb2.sln

runtest="mono ./packages/xunit.runner.console.*/tools/*/xunit.console.exe"

echo "Running tests..."

$runtest ./MechJeb2Tests/bin/Release/MechJeb2Tests.dll

echo "Finished running tests"

